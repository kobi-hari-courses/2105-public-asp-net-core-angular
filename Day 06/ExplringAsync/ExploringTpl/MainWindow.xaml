<Window x:Class="ExploringTpl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExploringTpl"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button VerticalAlignment="Center" HorizontalAlignment="Center" Padding="20" FontSize="40"
                Click="Button_Click"
                >GO!</Button>

        <Button x:Name="stopButton" HorizontalAlignment="Center" VerticalAlignment="Bottom" Padding="20" 
                Visibility="Collapsed"
                FontSize="40" Background="Cyan">STOP!!!</Button>
    </Grid>
</Window>
